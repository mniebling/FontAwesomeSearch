{
  "name": "FontAwesomeSearch",
  "version": "1.0.0",
  "description": "FontAwesomeSearch\r =================\r FontAwesomeSearch is a simple [website](http://mniebling.github.io/FontAwesomeSearch/) that allows you to perform text searches on the descriptions of FontAwesome icons.",
  "main": "index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/mniebling/FontAwesomeSearch.git"
  },
  "author": "Mike Niebling",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/mniebling/FontAwesomeSearch/issues"
  },
  "homepage": "https://github.com/mniebling/FontAwesomeSearch",
  "dependencies": {
    "jquery": "2.2.0",
    "lodash": "4.0.1",
    "mustache": "2.2.1",
    "velocity-animate": "1.2.3"
  },
  "devDependencies": {
    "browser-sync": "2.11.1",
    "browserify": "13.0.0",
    "concat": "1.0.0",
    "copyfiles": "0.2.1",
    "glob-concat": "1.0.1",
    "jshint": "2.9.1",
    "less": "2.5.3",
    "lodash": "4.0.1",
    "rimraf": "2.5.1"
  },
  "scripts": {
    "clean": "rimraf dist/*",

    "prebuild": "npm run clean -s",
    "build": "npm run build:static && npm run build:scripts && npm run build:styles",

    "build:static": "copyup --flatten src/font/* dist",

    "build:scripts": "browserify src/scripts/main.js > dist/bundled.js",

    "prebuild:styles": "node tasks/prepare-styles.js",
    "build:styles": "lessc dist/styles.less > dist/compiled.css",

    "serve": "browser-sync start --server",

    "dev": "npm run build && npm run serve",

    "lint": "jshint src/*.js"
  }
}
